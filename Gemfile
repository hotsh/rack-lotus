gemspec

group :test do
  gem "rake"     # rakefile
  gem "minitest" # test framework (specified here for prior rubies)
  gem "ansi"     # minitest colors
  gem "turn"     # minitest output
  gem "mocha"    # stubs
  gem "debugger" # debugging

  gem "awesome_print"
  gem "rack-test"
end

gem "lotus",     :git => "git://github.com/hotsh/lotus.git"
